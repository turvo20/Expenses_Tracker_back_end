{
    "version": 2,
    "builds": [
        {
          "src": "./src/app.js",
          "use": "@vercel/node"
        }
      ],
    "rewrites": [
        { "source": "/(.*)", "destination": "/" },
        { "source": "/public/(.*)", "destination": "/$1" }
      ],
      "routes": [
        {
          "src": "/(.*)",
          "destination": "/"
        }
      ]
}